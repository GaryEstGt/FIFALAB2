@model IEnumerable<Lab2FIFA.Models.Pais>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CrearPorArchivo")
</p>
@using (Html.BeginForm("Index", "Pais", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="submit" name="submitButton" value="PreOrden" />
    <input type="submit" name="submitButton" value="InOrden" />
    <input type="submit" name="submitButton" value="PostOrden" />
    <input type="submit" name="submitButton" value="Equilibrio" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Group)
        </td>
        <td>            
            @Html.ActionLink("Delete", "Delete", new { id=item.Id, name=item.Name, group=item.Group })
        </td>
    </tr>
}

</table>
